{
  "env": {
    "browser": true,
    "es6": true,
    "mocha":true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
   "ecmaFeatures": {
     "experimentalObjectRestSpread": true,
     "jsx": true
    }
  },
  "plugins": [
    "react"
    ],
    "rules": {
      "indent": [
        "error",
            2
      ],
      "react/jsx-uses-vars": 1,
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
}
